<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BluetoothApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BluetoothApp"
    xmlns:pages="clr-namespace:BluetoothApp.Pages"
    
    Shell.FlyoutBehavior="Disabled"
    Title="BluetoothApp">

    <ShellContent
        ContentTemplate="{DataTemplate pages:BluetoothPage}"
        Route="BluetoothPage" />

    <ShellContent
        ContentTemplate="{DataTemplate pages:BluetoothDevicePage}"
        Route="BluetoothDevicePage" />

</Shell>
