<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BluetoothApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BluetoothApp"
    xmlns:pages="clr-namespace:BluetoothApp.Pages"
    Title="BluetoothApp">

    <TabBar>

        <Tab Title="Bluetooth scan page">
            <ShellContent ContentTemplate="{DataTemplate pages:BluetoothPage}" Route="BluetoothPage" />

        </Tab>

        <Tab Title="Specific device">
            <ShellContent ContentTemplate="{DataTemplate pages:BluetoothDevicePage}" Route="BluetoothDevicePage" />
        </Tab>

    </TabBar>



</Shell>
