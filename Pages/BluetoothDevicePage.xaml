<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BluetoothApp.Pages.BluetoothDevicePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BluetoothDevicePage">
    <VerticalStackLayout>


        <HorizontalStackLayout  HorizontalOptions="Center">
            <Label
                x:Name="lblWelcome"
                Text=""
                VerticalOptions="Center" />

            <Label Text="----" VerticalOptions="Center" />
            <Label x:Name="lblId" VerticalOptions="Center" />
            <Button
                x:Name="btn_disconnect"
                Margin="5,0,0,0"
                Clicked="OnDisconnect"
                IsVisible="False"
                Text="Disconnect" />

            <Button
                x:Name="btn_connect"
                Margin="5,0,0,0"
                Clicked="OnConnect"
                IsVisible="False"
                Text="Connect"  />

        </HorizontalStackLayout>
        <ActivityIndicator x:Name="actIsBusy" />

        <Grid>
            <Label x:Name="lbl_value" Text="Value: "></Label>
        </Grid>
        
    </VerticalStackLayout>
</ContentPage>